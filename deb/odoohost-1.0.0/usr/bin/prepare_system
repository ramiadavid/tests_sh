#!/bin/bash

git -C /home/odoo/src/odoo pull > /dev/null || git clone git@github.com:odoo/odoo.git --depth=1 -b 16.0 /home/odoo/src/odoo
git -C /home/odoo/src/themes pull > /dev/null || git clone git@github.com:odoo/design-themes.git --depth=1 -b 16.0 /home/odoo/src/themes
git -C /home/odoo/src/enterprise pull || git clone git@github.com:odoo/enterprise.git --depth=1 -b 16.0 /home/odoo/src/enterprise
git -C /home/odoo/src/user pull || git clone git@github.com:ramiadavid/processcontrol16.git --recurse-submodules --depth=1 -b main /home/odoo/src/user


su -c "/home/odoo/venv/bin/pip install -r /home/odoo/src/odoo/requirements.txt" odoo

systemctl restart odoo