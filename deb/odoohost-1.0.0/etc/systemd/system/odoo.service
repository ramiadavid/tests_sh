[Unit]
Description=Odoo Open Source ERP and CRM
After=network.target

[Service]
Restart=always
Type=simple
SyslogIdentifier=odoo
PermissionsStartOnly=true
User=odoo
Group=odoo
ExecStart=/home/odoo/src/odoo/odoo-bin --config=/home/odoo/odoo.conf --data-dir=/home/odoo/data --database=${PGDATABASE} --logfile=/home/odoo/logs/odoo.log --addons-path=${ADDONS_PATH} --pidfile=/home/odoo/.pid
KillMode=mixed
StandardOutput=journal+console

[Install]
WantedBy=multi-user.target