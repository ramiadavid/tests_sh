[Unit]
Description=Odoo Open Source ERP and CRM
After=network.target

[Service]
EnvironmentFile=/etc/environment
Type=simple
SyslogIdentifier=odoo
PermissionsStartOnly=true
User=odoo
Group=odoo
ExecStart=/bin/bash -c 'exec /home/odoo/venv/bin/python3 /home/odoo/src/odoo/odoo-bin -c /home/odoo/odoo.conf --database=${PGDATABASE} --logfile=/home/odoo/logs/odoo.log --addons-path=$(extract_addons_path)'
KillMode=mixed
StandardOutput=journal+console

[Install]
WantedBy=multi-user.target